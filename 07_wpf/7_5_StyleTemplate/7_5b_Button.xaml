<StackPanel Margin="20">
    <!-- Simple Button -->
    <Button Content="Simple Button" Margin="10" Width="150"/>
    
    <!-- Styled Button -->
    <Button Margin="10" Width="200" Height="50">
        <StackPanel Orientation="Horizontal">
            <Ellipse Fill="Red" Width="20" Height="20" Margin="5"/>
            <TextBlock Text="Button with Icon" VerticalAlignment="Center"/>
        </StackPanel>
    </Button>
    
    <!-- Button with Complex Content -->
    <Button Margin="10" Width="200">
        <Grid>
            <Polygon Points="100,25 125,0 200,25 125,50" Fill="LightSteelBlue"/>
            <Polygon Points="100,25 75,0 0,25 75,50" Fill="White"/>
        </Grid>
    </Button>
</StackPanel>