<Window x:Class="_7_1_Basic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="My First WPF App" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Welcome to WPF!" FontSize="20" FontWeight="Bold"/>
            <Button Name="btnHello" Content="Click Me!" 
                    Click="btnHello_Click" Margin="10"/>
            <TextBox Name="txtInput" Margin="10" Text="Enter your name"/>
            <TextBlock Name="txtResult" FontSize="14" Foreground="Blue"/>
        </StackPanel>
    </Grid>
</Window>